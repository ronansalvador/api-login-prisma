// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id                    Int      @id @unique @default(autoincrement())
  name                  String   @db.VarChar(255)
  location              String
  participants_quantity Int
  date                  DateTime
  responsible           String

  @@map("events")
}

model User {
  id       Int    @id @unique @default(autoincrement())
  name     String @db.VarChar(255)
  email    String @unique
  password String

  @@map("users")
}
